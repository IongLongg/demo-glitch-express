extends ../layout

block content
    .container.pt-5
        h1 Login

        if errors 
            each error in errors  
                .alert.alert-danger=error
        
        form(action="/auth/login", method="post", style="width:350px",)
            .form-group
                label(for='email') Email address
                input.form-control(type='email', name="email",  value=email ? email : '', required)
            .form-group
                label(for='password') Password
                input.form-control(type='password', name="password", required)
            button.btn.btn-success.mt-3(type='submit') Log in
            a.btn.btn-primary.ml-3(href='/auth/signup') Sign up
