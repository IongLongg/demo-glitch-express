extends ../layout

block content
    .container.pt-5
        h2 Sign up

        form.form-group(action='/auth/signup', method='post', enctype='multipart/form-data', style='width:350px')
            .form-group
                label(for="name") Name
                input.form-control(type='text', name='name',  required)
            .form-group
                label(for="email") Email
                input.form-control(type='email', name='email',  required)
            .form-group
                label(for="password") Password
                input.form-control(type='password', name='password', required)
            .form-group
                label(for="avatar") Avatar
                input.form-control-file.mr-2(type='file', name='avatar',)
            .form-group
                input.btn.btn-success(type='submit', value='Create')
