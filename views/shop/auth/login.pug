extends ../../layout

block content    
    .container.pt-5
        h2 Login Shop

        if errors 
            each error in errors  
                .alert.alert-danger=error

        form.form-group(action='/shop/auth/login', method='post', style='width:350px')
            .form-group
                label(for='email') Email Shop 
                input.form-control(type='email', name='email', required)
            .form-group
                label(for="password") Password
                input.form-control(type="password", name='password', required)
            .form-group
                input.btn.btn-success(type='submit', value='Login')
                a.btn.btn-primary.ml-4(href='/shop/auth/signup') Sign up