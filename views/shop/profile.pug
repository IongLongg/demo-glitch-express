extends layout

block content
    .container.d-flex.justify-content-center.pt-5
        .card.mb-3(style='width:30rem;height:30rem')
            img.card-img-top(src=shop.logo, alt='Card image cap')
            .card-body
                h1.card-title=shop.name
                p.card-text=`Email : ${shop.email}`
                p.card-text=`Phone : ${shop.phone}`
        
