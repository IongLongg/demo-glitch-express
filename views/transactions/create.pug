extends ../layout

block content
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
        .navbar-brand Create Transaction
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
            span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
            ul.navbar-nav
                li.nav-item
                    a.nav-link(href='/transactions') Back 
    .container
        br
        form(action='/transactions/create', method='post')
            if isAdmin
                .form-group
                    label Users
                    select.form-control(name='user')
                        each user in users
                            option(value= user.id + '|' + user.name)= user.name
                            label User 
            .form-group    
                label Books
                select.form-control(name='book')
                    each book in books
                        option(value= book.id + '|' + book.name)= book.name
            input.btn.btn-success(type='submit', value="Create")
