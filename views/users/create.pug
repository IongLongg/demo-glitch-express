extends ../layout

block content
    .container.pt-5
        h2 Create user 

        if errors
            each error in errors
                .alert.alert-danger=error

        form.form-group(action='/users/create', method='post', enctype='multipart/form-data')
            .form-group
                label(for="name") Name
                input.form-control.mr-2(type='text', name='name', style='width:350px', required)
            .form-group
                label(for="email") Email
                input.form-control.mr-2(type='email', name='email', style='width:350px', required)
            .form-group
                label(for="password") Password
                input.form-control.mr-2(type='password', name='password', style='width:350px', required)
            .form-group
                label(for="avatar") Avatar
                input.form-control-file.mr-2(type='file', name='avatar', style='width:350px')
            input.btn.btn-success(type='submit', value='Save')