extends ../layout

block content
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
        a.navbar-brand(href='/users') Users
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
            span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
            ul.navbar-nav
                li.nav-item
                    a.nav-link(href='/users') Back 
    br
    .container
        if errors
            each error in errors
                .alert.alert-danger=error

        form.form-inline(action='/users/create', method='post')
            input.form-control.mr-2(type='text', name='name', placeholder='New user')
            input.btn.btn-success(type='submit', value='Save')