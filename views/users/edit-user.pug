extends ../layout

block content
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
        a.navbar-brand(href='/users') Users
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
            span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
            ul.navbar-nav
                li.nav-item
                    a.nav-link(href='/users') Back 
    br
    .container
        form.form-inline.mr-2(action='/users/' + user.id + '/edit', method='post')
            input.form-control(type='text', name='name', value= user.name)
            input.btn.btn-outline-primary(type='submit', value='Submit')