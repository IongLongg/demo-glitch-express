extends ../layout

block content
    .container.pt-5
        h1 Users
        if errors
            each error in errors
                .alert.alert-danger= error

        form.form-inline(action='/users/search', method='get')
            input.form-control.mr-2(type='text', name='name', value=(inputSearch ? inputSearch : ''), placeholder='Search user')
            input.btn.btn-primary.mr-2(type='submit', value='Search')
            a.btn.btn-success(href='users/create') Add
        br
        table.table.text-center(style='width:100%')
            tr
                th
                th Name
                th.text-center(colspan="2") Action         
            - var i=1;
            each user in users
                tr
                    td= i++
                    td= user.name
                    td
                        a.btn.btn-outline-info(href=`/users/${user.id}/update`) Update
                    td
                        a.btn.btn-outline-danger(href=`/users/${user.id}/delete`) Delete
        